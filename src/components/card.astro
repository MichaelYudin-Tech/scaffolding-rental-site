---
export interface Props {
  variant?: 'default' | 'elevated' | 'bordered';
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  variant = 'default',
  padding = 'md',
  class: className = '',
  ...props 
} = Astro.props;

const baseClasses = 'bg-white rounded-xl';

const variants = {
  default: 'shadow-md hover:shadow-lg transition-shadow',
  elevated: 'shadow-xl border border-gray-100',
  bordered: 'border-2 border-gray-200 hover:border-primary-300 transition-colors'
};

const paddings = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = `${baseClasses} ${variants[variant]} ${paddings[padding]} ${className}`;
---

<div class={classes} {...props}>
  <slot />
</div>