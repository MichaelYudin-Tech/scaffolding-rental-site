  <Schema type="breadcrumb" data={[
    {name: "注 转", url: "https://pigumim.netlify.app/"}
  ]} slot="head" />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-50 via-blue-50 to-gray-100 py-20">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content Side -->
        <div class="text-center lg:text-right">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight text-gray-900">
            {homepage.heroTitle}
          </h1>
          <p class="text-xl md:text-2xl mb-8 leading-relaxed text-gray-700">
            {homepage.heroSubtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <Button 
              href={`tel:+972${siteSettings.phone?.replace(/^0/, '').replace(/-/g, '')}`}
              variant="secondary" 
              size="lg"
            >
               转拽砖专 注砖 爪注转 专
            </Button>
            <Button 
              href={`https://wa.me/${siteSettings.whatsapp}?text=${encodeURIComponent('砖,  注 拽 注 注 砖专转 驻  爪注转 专.  驻专 住驻.')}`}
              variant="outline"
              size="lg"
            >
