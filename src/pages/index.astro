        </div>
        
        <!-- Image Side -->
        <div class="relative">
          {homepage.heroImage ? (
            <img 
              src={urlFor(homepage.heroImage).width(800).height(400).url()} 
              alt="驻 " 
              class="w-full h-96 object-cover rounded-2xl shadow-2xl"
              fetchpriority="high"
              loading="eager"
            />
          ) : (
            <div class="w-full h-96 bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl shadow-2xl flex items-center justify-center">
              <div class="text-center text-primary-700">
                <svg class="w-24 h-24 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <p class="text-lg font-semibold">驻 拽爪注</p>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center text-gray-900 mb-16">
        {homepage.whyUsTitle}
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {homepage.whyUsItems.map((item: any) => (
          <Card class="text-center bg-gray-50 hover:bg-white">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-primary-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              {item.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {item.description}
            </p>
          </Card>
        ))}
