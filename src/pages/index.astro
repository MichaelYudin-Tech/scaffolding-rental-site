    homepage.partners = await sanityClient.fetch('*[_type == "partner"] | order(order asc)');
    homepage.testimonials = await sanityClient.fetch('*[_type == "testimonial"] | order(_createdAt desc)[0...6]');
  }
} catch (error) {
  console.log('Sanity fetch error:', error.message);
  console.log('Using fallback content (Sanity not connected yet)');
}

